using System;

namespace _4._STARTOP___GENNEMSNIT
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Gennemsnittets beregner \n- - - - - - - - - - - - - - - ");
            Console.Write("Tal 1.");
            String tal1 = Console.ReadLine();
            Console.Write("Tal 2.");
            String tal2 = Console.ReadLine();
            Console.Write("Tal 3.");
            String tal3 = Console.ReadLine();

            Double Resultat = (Convert.ToDouble(tal1) + Convert.ToDouble(tal2) + Convert.ToDouble(tal3)) / 3;
            


            Console.WriteLine("- - - - - - - - - - - - - - - \n Gennemsnittet af " + tal1+", "+tal2+" & " + tal3 +" er "+ Resultat);
            Console.ReadLine();

        }
    }
}
